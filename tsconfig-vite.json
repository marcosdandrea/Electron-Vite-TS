{
  "compilerOptions": {
    "outDir": "dist/headless/dist-ui",
    "module": "NodeNext",
    "jsx": "react",
    "noEmit": true,
    "composite": true,  
    "types": ["./types"],
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@common/*": ["src/common/*"],
      "@components/*": ["src/ui/components/*"],
      "@hooks/*": ["src/ui/hooks/*"],
      "@views/*": ["src/ui/views/*"],
      "@contexts/*": ["src/ui/contexts/*"],
      "@utils/*": ["src/ui/utils/*"]
    },
  },
  "include": ["src/ui", "src/common"],
}
